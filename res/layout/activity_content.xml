<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sini="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_e4"
    android:orientation="vertical" >

    <com.jade.customervisit.ui.view.TitleBarView
        android:id="@+id/content_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sini:custom_title="@string/service_list" />

    <ListView
        android:id="@+id/content_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/gray_line"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="@drawable/leftmenu_item_bg"
        android:overScrollMode="never"
        android:scrollbars="none" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color" >

        <Button
            android:id="@+id/upload"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/selector_login_btn"
            android:text="提  交"
            android:textColor="@color/white_color"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>