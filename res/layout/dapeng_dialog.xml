<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rescue_cancel_workorder_dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dapeng_popbox_top"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/prompt"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dapeng_popbox_middle"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dip"
            android:text="签到网络请求失败"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dapeng_popbox_bottom"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/dapeng_agree"
            android:layout_width="100dip"
            android:layout_height="35dip"
            android:background="@drawable/selector_dapeng_agree_dialog"
            android:text="再次提交"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dapeng_disagree"
            android:layout_width="100dip"
            android:layout_height="35dip"
            android:layout_marginLeft="12dip"
            android:background="@drawable/selector_dapeng_disagree_dialog"
            android:text="重新扫码"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>